<% if user_signed_in? %>
	<div class="sidebar <%= @current_design %>">
		<div class="logo-container"><%= image_tag("logo.png", width: "168", class: "logo") %></div>
		<div class="avatar">
			<div class="avatar-inner">
				<%= link_to( edit_user_registration_path(current_user )) do %>
						<% if !current_user.avatar.url.nil? %>
							<%= image_tag(current_user.avatar.url, width: "168", class: "avatar-image") %>
						<% else %>
							<%= cl_image_tag("avatar.jpg", :alt => "Sample Image", class: "avatar-image") %>
						<% end %>
					<% end %>
			</div>
			<div class="avatar-email"><h4><%= current_user.email %></h4></div>
		</div>
		<%= render 'homepage/sidebar/menu_items' %>
		<!-- <%= render 'homepage/sidebar/footer' %> -->
	</div>
<% end %>
