<% if user_signed_in? %>
	<div class="sidebar <%= @current_design %>">
		<div class="logo-container"><%= image_tag("logo.png", width: "168", class: "logo") %></div>
		<div class="avatar">
			<div class="avatar-image">
				<div class="avatar-placeholder"><h4>Your Avatar</h4></div>
			</div>
			<div class="avatar-email"><h4><%= current_user.email %></h4></div>
		</div>
		<%= render 'homepage/sidebar/menu_items' %>
		<%= render 'homepage/sidebar/footer' %>
	</div>
<% end %>
