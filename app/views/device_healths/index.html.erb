<%- model_class = DeviceHealth -%>
<div class="page-header">
  <h1><%=t '.title', :default => DeviceHealth %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:current_battery_charge) %></th>
      <th><%= model_class.human_attribute_name(:available_storage) %></th>
      <th><%= model_class.human_attribute_name(:health) %></th>
      <th><%= model_class.human_attribute_name(:network_signal) %></th>
      <th><%= model_class.human_attribute_name(:available_mobile_data) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @device_healths.each do |device_health| %>
      <tr>
        <td><%= device_health.id %></td>
        <td><%= device_health.current_battery_charge %></td>
        <td><%= device_health.available_storage %></td>
        <td><%= device_health.health %></td>
        <td><%= device_health.network_signal %></td>
        <td><%= device_health.available_mobile_data %></td>
        <td><%=l device_health.created_at, format: :long %></td>
        <td>
          <%= link_to device_health_path(device_health), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to device_health_path(device_health), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_device_health_path,
            :class => 'btn btn-primary' %>
